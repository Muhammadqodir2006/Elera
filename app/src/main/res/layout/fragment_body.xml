<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BodyFragment">



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/bodyViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bodyTabLayout"/>
    <com.google.android.material.tabs.TabLayout
        android:animateLayoutChanges="true"
        app:tabIndicatorColor="#335ef7"
        app:tabSelectedTextColor="#335ef7"
        app:tabIconTint="#9e9e9e"
        app:tabTextColor="#9e9e9e"
        android:id="@+id/bodyTabLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>