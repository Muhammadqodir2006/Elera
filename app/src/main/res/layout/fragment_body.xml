<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BodyFragment">



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/bodyViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bodyTabLayout"/>

    <com.google.android.material.tabs.TabLayout
        android:contentDescription="@string/menu_of_the_body"
        android:id="@+id/bodyTabLayout"
        android:layout_width="match_parent"
        app:tabIndicatorHeight="0dp"
        app:tabIndicatorFullWidth="true"
        app:tabRippleColor="#00000000"
        android:layout_height="100dp"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabIconTint="@color/tab_icon_color_selector"
        app:tabIconTintMode="src_atop"
        app:tabIndicatorAnimationDuration="300"
        app:tabIndicatorColor="#335ef7"
        app:tabSelectedTextColor="#335ef7"
        app:tabTextColor="#9e9e9e" />


</androidx.constraintlayout.widget.ConstraintLayout>